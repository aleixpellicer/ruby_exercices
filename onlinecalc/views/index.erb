            <input type="submit" value="Multiply" />
        </form>
        <form action="divide" method="post">
            <input type="text" name="first_value" placeholder="First value..." />
            <input type="text" name="second_value" placeholder="Second value..." />
            <input type="submit" value="Divide" />
        </form>
        <a href="counting/" title="counting">Counting...</a>
    </body>
